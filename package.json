{
  "name": "jasonmorris",
  "version": "0.9.0",
  "author": "Jason Morris",
  "license": "MIT",
  "description": "jasonmorris.com",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsnmrs/jasonmorris.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.0",
    "@11ty/eleventy-plugin-rss": "1.1.2",
    "@double-great/remark-lint-alt-text": "0.7.0",
    "autoprefixer": "10.4.2",
    "clean-css": "5.3.0",
    "eleventy-plugin-git-commit-date": "0.1.3",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-es5": "1.5.0",
    "eslint-plugin-no-unsanitized": "4.0.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-xss": "0.1.11",
    "extra-eyes": "3.0.2",
    "html-minifier": "4.0.0",
    "postcss": "8.4.7",
    "postcss-cli": "9.1.0",
    "prettier": "2.5.1",
    "remark-cli": "10.0.1",
    "remark-frontmatter": "4.0.1",
    "remark-frontmatter-validator": "0.4.0",
    "sass": "1.49.9",
    "stylelint": "14.5.3",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-declaration-strict-value": "1.8.0",
    "stylelint-no-unsupported-browser-features": "5.0.3",
    "stylelint-scss": "4.1.0",
    "uglify-js": "3.15.2"
  },
  "scripts": {
    "prettier": "prettier --write \"**/*.{js,md,scss,yml}\"",
    "browser-list": "echo Browser support list: && npx browserslist",
    "browser-update": "npx browserslist@latest --update-db",
    "stylelint": "stylelint \"scss/**/*.scss\" --fix",
    "scss": "sass --no-source-map --style=compressed scss:_includes",
    "autoprefixer": "postcss --no-map -r \"_includes/*.css\"",
    "css": "npm run browser-list && npm run stylelint && npm run scss && npm run autoprefixer",
    "eslint": "eslint \"js/*.js\"",
    "uglify": "uglifyjs js/facade.js -m -o _includes/scripts.js",
    "js": "npm run eslint && npm run uglify",
    "html": "npx @11ty/eleventy",
    "build": "npm run prettier && npm run css && npm run js && npm run html",
    "content": "npx extra-eyes {posts,pages} --dict=terms.dic",
    "markdown": "remark posts",
    "test": "npm run build && npm run content && npm run markdown",
    "write": "npm run prettier && npm run css && npm run js && npx @11ty/eleventy --serve"
  }
}
