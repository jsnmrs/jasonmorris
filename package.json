{
  "name": "jasonmorris",
  "version": "0.1.0",
  "author": "Jason Morris",
  "license": "MIT",
  "description": "jasonmorris.com",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsnmrs/jsnmrs.github.io.git"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "htmlhint": "^0.10.1",
    "js-yaml": "^3.12.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.1.2",
    "postcss-cli": "^6.0.1",
    "prettier": "^1.15.2",
    "stylelint": "^9.8.0",
    "stylelint-a11y": "^1.1.9",
    "stylelint-scss": "^3.4.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1"
  },
  "scripts": {
    "scss": "node-sass --output-style compressed -o _includes _scss",
    "autoprefixer": "postcss --no-map -u autoprefixer -r _includes/*.css",
    "stylelint": "stylelint _scss/**/*.scss",
    "stylelint:fix": "stylelint _scss/**/*.scss --fix",
    "css": "npm run stylelint && npm run scss && npm run autoprefixer",
    "jekyll": "bundle exec jekyll build --config _config.yml,_local-config.yml",
    "jekyll:serve": "bundle exec jekyll serve --watch --config _config.yml,_local-config.yml",
    "postlint": "tape _test/jasonmorris.test.js | tap-spec",
    "prettier": "prettier --single-quote --write **/*.{yml,md,js}",
    "htmllint": "htmlhint _site/**/*.html",
    "html": "npm run postlint && npm run jekyll && npm run htmllint",
    "build": "npm run prettier && npm run css && npm run html",
    "serve": "browser-sync start --server '_site' --files '_site/**/*.html'",
    "test": "npm run build",
    "watch:scss": "onchange '_scss/*.scss' -e '_site/**' -- npm run css && npm run jekyll",
    "watch:css": "onchange '_includes/*.css' -e '_site/**' -- npm run jekyll",
    "watch:html": "onchange '_posts/*' -e '_site/**' -- npm run jekyll",
    "work": "npm run build && npm-run-all --parallel serve watch:*"
  }
}
