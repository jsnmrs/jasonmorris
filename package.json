{
  "name": "jasonmorris",
  "version": "0.2.0",
  "author": "Jason Morris",
  "license": "MIT",
  "description": "jasonmorris.com",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsnmrs/jsnmrs.github.io.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "autoprefixer": "^9.7.6",
    "clean-css": "^4.2.3",
    "constyble": "^1.3.0",
    "htmlhint": "^0.11.0",
    "husky": "^4.2.5",
    "js-yaml": "^3.13.1",
    "node-sass": "^4.13.1",
    "pa11y-ci": "^2.3.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^2.0.4",
    "push-dir": "^0.4.1",
    "stylelint": "^13.3.2",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.0",
    "tap-spec": "^5.0.0"
  },
  "scripts": {
    "css": "npm run stylelint && npm run scss && npm run autoprefixer",
    "stylelint": "stylelint \"_scss/**/*.scss\" --fix",
    "scss": "node-sass --output-style compressed -o _includes _scss",
    "autoprefixer": "postcss --no-map -u autoprefixer -r _includes/*.css",
    "html": "npx @11ty/eleventy",
    "lint": "npm run constyble && npm run htmllint && npm run pa11y",
    "constyble": "constyble \"_includes/style.css\" | tap-spec",
    "htmllint": "htmlhint _site/",
    "pa11y": "pa11y-ci -s https://jasonmorris.com/sitemap.xml",
    "prettier": "prettier --single-quote --write **/*.{yml,md,js}",
    "test": "npm run build && npm run lint",
    "build": "npm run css && npm run html",
    "deploy": "npm run build && push-dir --dir _site --branch gh-pages --cleanup"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
