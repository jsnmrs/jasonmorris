{
  "name": "jasonmorris",
  "version": "0.1.0",
  "author": "Jason Morris",
  "license": "MIT",
  "description": "jasonmorris.com",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsnmrs/jsnmrs.github.io.git"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "browser-sync": "^2.26.7",
    "constyble": "^1.3.0",
    "htmlhint": "^0.11.0",
    "js-yaml": "^3.13.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "pa11y-ci": "^2.3.0",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.1",
    "stylelint-a11y": "^1.2.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.13.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.12.0"
  },
  "scripts": {
    "scss": "node-sass --output-style compressed -o _includes _scss",
    "autoprefixer": "postcss --no-map -u autoprefixer -r _includes/*.css",
    "constyble": "constyble \"_includes/style.css\" | tap-spec",
    "stylelint": "stylelint \"_scss/**/*.scss\"",
    "stylelint:fix": "stylelint \"_scss/**/*.scss\" --fix",
    "css": "npm run stylelint:fix && npm run scss && npm run autoprefixer && npm run constyble",
    "jekyll": "bundle exec jekyll build --config _config.yml,_local-config.yml",
    "jekyll:serve": "bundle exec jekyll serve --watch --config _config.yml,_local-config.yml",
    "postlint": "tape _test/jasonmorris.test.js | tap-spec",
    "prettier": "prettier --single-quote --write **/*.{yml,md,js}",
    "htmllint": "htmlhint _site/",
    "html": "npm run postlint && npm run jekyll && npm run htmllint",
    "pa11y": "pa11y-ci -s https://jasonmorris.com/sitemap.xml",
    "build": "npm run prettier && npm run css && npm run html && npm run pa11y",
    "serve": "browser-sync start --server \"_site\" --files \"_site/**/*.html\"",
    "test": "npm run build",
    "watch:scss": "onchange \"_scss/*.scss\" -e \"_site/**\" -- npm run css && npm run jekyll",
    "watch:css": "onchange \"_includes/*.css\" -e \"_site/**\" -- npm run jekyll",
    "watch:html": "onchange \"_posts/*\" -e \"_site/**\" -- npm run jekyll",
    "work": "npm run build && npm-run-all --parallel serve watch:*"
  }
}
