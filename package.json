{
  "name": "jasonmorris",
  "version": "0.1.0",
  "author": "Jason Morris",
  "license": "MIT",
  "description": "jasonmorris.com",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsnmrs/jsnmrs.github.io.git"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "htmlhint": "^0.10.1",
    "js-yaml": "^3.12.0",
    "node-sass": "^4.9.3",
    "postcss-cli": "^6.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "uglify-js": "^3.4.9"
  },
  "scripts": {
    "scss": "node-sass --output-style compressed -o _includes _scss",
    "autoprefixer": "postcss -u autoprefixer -r _includes/*.css",
    "uglify": "uglifyjs js/lib/sw.js -m -o sw.js",
    "jekyll": "bundle exec jekyll build --config _config.yml,_local-config.yml",
    "test": "tape _test/jasonmorris.test.js | tap-spec",
    "stylelint": "stylelint _scss/**/*.scss",
    "htmllint": "htmlhint _site/**/*.html",
    "eslint": "eslint js/**/*.js",
    "html": "npm run test && npm run jekyll && npm run htmllint",
    "css": "npm run stylelint && npm run scss && npm run autoprefixer",
    "js": "npm run eslint && npm run uglify",
    "build": "npm run css && npm run js && npm run html"
  }
}
