{
  "name": "jasonmorris",
  "author": "Jason Morris",
  "license": "MIT",
  "type": "module",
  "description": "jasonmorris.com",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsnmrs/jasonmorris.git"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "postcss \"css/**/*.css\" --watch --dir \"_includes\"",
    "dev:js": "chokidar \"js/**/*.js\" -c \"npm run js:build\"",
    "dev:eleventy": "eleventy --serve --quiet",
    "build": "run-s clean lint build:* validate",
    "build:css": "postcss \"css/**/*.css\" --no-map --dir \"_includes\"",
    "build:js": "npm run js:build",
    "build:html": "eleventy",
    "js:build": "run-s js:lint js:minify",
    "js:lint": "eslint \"js/*.js\" --fix",
    "js:minify": "terser js/media-utils.js -c -m -o _includes/media-utils.js && terser js/youtube-api.js -c -m -o _includes/youtube-api.js && terser js/video.js -c -m -o _includes/video.js && terser js/audio.js -c -m -o _includes/audio.js",
    "lint": "run-p lint:*",
    "lint:css": "stylelint \"css/**/*.css\" --fix",
    "lint:js": "eslint \"js/**/*.js\" --fix",
    "lint:prettier": "prettier --write \"**/*.{js,md,css,yml}\"",
    "lint:content": "run-s lint:content:*",
    "lint:content:md": "double-check \"{posts,pages}/**/*.md\" --liquid",
    "lint:content:html": "double-check \"{posts,pages}/**/*.html\" --html --liquid",
    "lint:markdown": "remark posts",
    "validate": "run-p validate:*",
    "validate:html": "html-validate _site",
    "clean": "rimraf _site _includes/*.{css,js}",
    "format": "run-s lint:prettier lint:css lint:js"
  },
  "dependencies": {
    "@11ty/eleventy-img": "6.0.4",
    "@double-great/double-check": "0.5.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.1.0",
    "@11ty/eleventy-plugin-rss": "2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "5.0.1",
    "@double-great/remark-lint-alt-text": "1.1.1",
    "@double-great/stylelint-a11y": "3.0.4",
    "autoprefixer": "10.4.21",
    "chokidar-cli": "3.0.0",
    "cssnano": "7.0.7",
    "eleventy-plugin-git-commit-date": "0.1.3",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "html-validate": "9.5.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.5.3",
    "postcss-cli": "11.0.1",
    "prettier": "3.5.3",
    "remark-cli": "12.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-frontmatter-validator": "2.0.0",
    "rimraf": "6.0.1",
    "stylelint": "16.19.1",
    "stylelint-config-standard": "38.0.0",
    "stylelint-plugin-defensive-css": "1.0.4",
    "stylelint-plugin-logical-css": "1.2.3",
    "terser": "5.39.1"
  }
}
